build:
	dh_testdir

binary-indep: build
	dh_testdir
	dh_testroot

	dh_installdirs -i
	dh_install -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installchangelogs -i
	dh_installman -i
	dh_installinit -i
	dh_installlogrotate -i

	dh_perl -i

	dh_compress -i
	dh_fixperms -i

	dh_md5sums -i
	dh_gencontrol -i
	dh_installdeb -i
	dh_builddeb -i

binary: binary-indep

clean:
	dh_testdir
	dh_testroot

	dh_clean

.PHONY: binary binary-arch binary-indep build clean
